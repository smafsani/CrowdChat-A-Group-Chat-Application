<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - CrowdChat</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Ubuntu:wght@400;700&display=swap" rel="stylesheet">

</head>

<body>
    <div class="container">
        <nav>
            <img src="./images/logo2.png" alt="">
        </nav>
        <div class="login">
            <form action="/register" method="post" onsubmit="clearError('error-box')">
                <div class="large-text">
                    Register
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" name="email" class="form-control" id="exampleInputEmail1" required aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="fullname" class="form-label">Full Name</label>
                    <input type="text" name="fullname" class="form-control" id="exampleInputName" required>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword1" required>
                    <div class="form-text">Password must contain atleast 8 characters.</div>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1"  onclick="passwordVisibility(this, 'exampleInputPassword1')">
                    <label class="form-check-label" for="exampleCheck1">Show Password</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <p id="error-box"><% if(registerError == 1){ %>
                <%= registerErrorMsg %>
                <% } %>
            </p>

            <div class="acc-inf">Already have an account? <a href="/">Login</a></div>
        </div>
    </div>



    <script>
        function passwordVisibility(checkBox, id){
            let doc = document.getElementById(id);
            if(checkBox.checked == true){
                doc.type = 'text';
            }
            else{
                doc.type = 'password'
            }
        }
        function clearError(id){
            document.getElementById(id).innerHTML = "";
        }
    </script>
</body>

</html>